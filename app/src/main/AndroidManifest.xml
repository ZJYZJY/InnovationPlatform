<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hdu.innovationplatform">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.LoginActivity"
            android:label="@string/label_login_activity" />
        <activity
            android:name=".activity.SignupActivity"
            android:label="@string/label_signup_activity" />
        <activity
            android:name=".activity.UserInfoActivity"
            android:label="@string/label_user_info_activity"
            android:theme="@style/AppTheme_NoTopBar" />
        <activity
            android:name=".activity.EditUserInfo"
            android:label="@string/label_edit_user_info_activity" />
        <activity
            android:name=".activity.EditBlogActivity"
            android:label="@string/label_edit_blog_activity" />
        <activity
            android:name=".activity.BlogDisplayActivity"
            android:label="@string/label_display_blog_activity" />
        <activity
            android:name=".activity.CommentsActivity"
            android:label="@string/label_list_comment" />
    </application>

</manifest>