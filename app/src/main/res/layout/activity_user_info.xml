<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout style="@style/one_layout">

            <LinearLayout style="@style/mid_layout">

                <TextView
                    style="@style/usertext"
                    android:text="真实姓名">
                </TextView>

                <TextView
                    android:id="@+id/edit_name"
                    style="@style/usertextsecond"
                    android:text="Feiniu" />
            </LinearLayout>

            <LinearLayout style="@style/mid_layout">

                <TextView
                    style="@style/usertext"
                    android:text="性别" />

                <TextView
                    android:id="@+id/edit_sex"
                    style="@style/usertextsecond"
                    android:text="男" />
            </LinearLayout>

            <LinearLayout style="@style/mid_layout">

                <TextView
                    style="@style/usertext"
                    android:text="年龄" />

                <TextView
                    android:id="@+id/edit_age"
                    style="@style/usertextsecond"
                    android:text="35" />
            </LinearLayout>

            <LinearLayout style="@style/mid_layout">

                <TextView
                    style="@style/usertext"
                    android:text="信用星级" />

                <RatingBar
                    android:id="@+id/ratingbar"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="4"
                    android:stepSize="0.5" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout style="@style/one_layout">

            <LinearLayout
                style="@style/mid_layout"
                android:weightSum="1">

                <TextView
                    style="@style/usertext"
                    android:text="货车类型" />

                <TextView
                    android:id="@+id/edit_cartype"
                    style="@style/usertextsecond"
                    android:text="平板车" />
            </LinearLayout>

            <LinearLayout style="@style/mid_layout">

                <TextView
                    style="@style/usertext"
                    android:text="车牌号" />

                <TextView
                    android:id="@+id/edit_carnum"
                    style="@style/usertextsecond"
                    android:text="AN352" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/exit_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:background="@drawable/accent_btn"
        android:text="退出登录"
        android:textColor="@color/white"
        android:textSize="18sp" />

</RelativeLayout>
